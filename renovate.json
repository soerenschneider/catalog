{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":rebaseStalePrs"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "flux": {
    "fileMatch": ["\\.yaml$"]
  },
  "argocd": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["kubernetes"],
      "updateTypes": ["major", "minor", "patch"]
    },
    {
      "matchDatasources": ["docker"],
      "updateTypes": ["minor", "patch"]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [".*y[a]?ml$"],
      "matchStrings": [
          "#\\srenovate:\\sdatasource=(?<datasource>docker)( versioning=(?<versioning>.*?))?\\s.+_image: \"(?<depName>.*?):(?<currentValue>.*)\"",
          "(?i)#\\s+renovate:\\s+datasource=(?<datasource>.*?) depName=(?<depName>.*?)(\\s+versioning=(?<versioning>.*?))?\\s+.*version[=:]\\s*(?<currentValue>.*)",
          "(?i)#\\s+renovate:\\s+datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)(\\s+versioning=(?<versioning>.*?))?\\s+registryUrl=(?<registryUrl>.*)\\s+.*version[=:]\\s*(?<currentValue>.*)"
      ]
    }
  ]
}
